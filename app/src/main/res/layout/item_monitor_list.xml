<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/tvorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="1"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvstud_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="YOO YOO"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvorder" />

        <TextView
            android:id="@+id/tvstu_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tvorder"
            android:layout_marginStart="190dp"
            android:layout_centerVertical="true"
            android:text="S10167483F"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/circle_red_32"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp" />

    </RelativeLayout>
</LinearLayout>
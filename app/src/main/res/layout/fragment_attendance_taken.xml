<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.np.ece.ame_android_lecturer.Fragment.AttendanceTakenFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvModule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvModule"
                android:gravity="center"
                android:text="aaaa"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClass"
                android:gravity="center"
                android:text="bbbb"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTime"
                android:gravity="center"
                android:text="cccc"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVenue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Now\n transmitting beacons\n for students"
                android:textSize="25sp"
                android:textColor="@color/green"/>



           <ImageButton
               android:layout_width="340dp"
               android:layout_height="250dp"
               android:id="@+id/btnActivateBeacon"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="240dp"
               android:layout_gravity="center"
               android:background="@drawable/bluetooth6"
               android:elevation="10dp"/>





        </RelativeLayout>
    </ScrollView>
</FrameLayout>
